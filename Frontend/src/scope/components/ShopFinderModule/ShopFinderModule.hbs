<section class="ShopFinder js-shop-finder {{#if bottomMargin}}bottom-margin{{/if}} {{#if topMargin}}top-margin{{/if}}" data-match-count="{{matchCount}}">
	{{#with title}}
		{{> TitleBannerModule/TitleBannerModule}}
	{{/with}}
	<form class="ShopFinder__form form js-shop-form" action="{{submit.endpoint}}" method="post">
		<input type="hidden" name="latitude" value="" />
		<input type="hidden" name="longitude" value="" />
		<div class="ShopFinder__top">
			<div class="layout layout-flex">
				{{#with location ~}}
					<div class="lg-col-auto bottom-margin">
						<label class="label-input">
							<div class="label">{{label}}</div>
							<input class="js-shop-location" type="text" name="{{name}}" placeholder="{{placeholder}}" />
						</label>
						<button id="useCurrent" class="ShopFinder__current-location js-shop-current" data-endpoint="/reverseGeocode" type="button">
							{{current.label}}
							<img class="ShopFinder__current-icon lazy" src="{{current.placeholder}}" data-imgs="{{current.icon}}" alt="" />
						</button>
					</div>
				{{~/with ~}}

				{{~#with type ~}}
					<label class="label-input lg-col-auto bottom-margin">
						<div class="label">{{label}}</div>
						<select name="type">
							{{#each options}}
								<option value="{{value}}">{{label}}</option>
							{{/each}}
						</select>
					</label>
				{{~/with}}
			</div>

			<div class="layout layout-flex">
				<div class="lg-col-auto center">
					<label class="label-checkbox">
						<input type="checkbox" name="{{name}}" />
						<span class="custom"></span>
						{{include}}
					</label>
				</div>

				<div class="lg-col-auto">
					<button class="btn purple search right js-shop-submit" type="submit">{{submit.label}}</button>
				</div>
			</div>
		</div>
	</form>

	{{#with data}}
		{{> PageItemListing/PageItemListing}}
	{{/with}}
</section>
