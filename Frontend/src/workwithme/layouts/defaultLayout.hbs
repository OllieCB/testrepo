<!doctype html>
<html lang="en-gb">
    <head>
        <!-- Set title -->
		<title>{{#if title}}{{title}}{{/if}}</title>

        <!-- Set the viewport -->
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <!-- Set character encoding -->
        <meta charset="utf-8">

        <link rel="stylesheet" type="text/css" media="screen" href="/css/styles.css"/>
        {{!-- <link rel="stylesheet" type="text/css" media="screen and (min-width: 56.25em)" href="/css/styles-tablet.css"/>
        <link rel="stylesheet" type="text/css" media="screen and (min-width: 75em)" href="/css/styles-desktop.css"/>
        <link rel="stylesheet" type="text/css" media="print" href="/css/print.css"/> --}}

        <!-- Mobile menu icons -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>
<body class="{{#if title}}{{title}}{{/if}}">
    {{#fetchSharedData 'AccessNavModule/AccessNavData'}}
        {{> AccessNavModule/AccessNavModule}}
    {{/fetchSharedData}}

    <div class="fixed-container">
        {{#fetchSharedData 'CookieBannerModule/CookieBannerData'}}
            {{> CookieBannerModule/CookieBannerModule}}
        {{/fetchSharedData}}
    </div>

    {{#> header}}
        {{#fetchData 'WWMHeaderModule/WWMHeaderData'}}
            {{> WWMHeaderModule/WWMHeaderModule}}
        {{/fetchData}}
    {{/header}}

    <main id="main" tabindex="-1">
        {{#> content}}
            Optional default content
        {{/content}}
    </main>

    {{#unless hideFooter}}
        {{#> footer}}
            {{#fetchData 'WWMFooterModule/WWMFooterData'}}
                {{> WWMFooterModule/WWMFooterModule}}
            {{/fetchData}}
        {{/footer}}
    {{/unless}}

    <div class="modals-container"></div>

    <script src="/js/main.js"></script>
</body>
</html>
